body
  background: #F4F4F4

#wrapper
  width: 300px
  padding: 1rem
  margin: 0 auto
  background: white

button
  cursor: pointer
  width: 100%
  height: 3em
  padding: 0 0.75em
  font-size: 1.5rem
  background: #F0F0F0
  border: 0
  border-radius: 3px
  box-shadow: 0
  outline: 0
  transition: 125ms transform
  transform: scale(1)
  &:hover
    background: #F0F0F0 - 10%
  &.pressed
    transform: scale(0.8)
