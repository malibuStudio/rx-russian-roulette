// ============================================================
// Border Box
html
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
*, *:before, *:after
  -webkit-box-sizing: inherit
  -moz-box-sizing: inherit
  box-sizing: inherit


html, body
  background: #F4F4F4
  padding: 0
  margin: 0
  width: 100%
  min-height: 100%

#wrapper
  width: 100%
  max-width: 350px
  padding: 1rem
  margin: 1rem auto
  background: white

button
  cursor: pointer
  width: 100%
  height: 3em
  padding: 0 0.75em
  font-size: 1.5rem
  background: #F0F0F0
  border: 0
  border-radius: 3px
  box-shadow: 0
  outline: 0
  transition: 125ms transform
  transform: scale(1)
  &:hover
    background: #F0F0F0 - 10%
  &.pressed
    transform: scale(0.8)
